%article.video_category
  - @categories.each do |category|
    %header
      = link_to category_path(category) do
        %h2= category.name
      .videos.row
        - category.videos.each do |video|
          .video.col-sm-2.horizontal-margin
            = link_to video_path(video) do
              = image_tag("/tmp/#{video.cover}")
